# Example backend configuration for S3 remote state
#
# Prerequisites:
# 1. Create S3 bucket: aws s3 mb s3://your-terraform-state-bucket --region eu-central-1
# 2. Enable versioning: aws s3api put-bucket-versioning --bucket your-terraform-state-bucket --versioning-configuration Status=Enabled
# 3. Create DynamoDB table: aws dynamodb create-table --table-name terraform-state-locks --attribute-definitions AttributeName=LockID,AttributeType=S --key-schema AttributeName=LockID,KeyType=HASH --billing-mode PAY_PER_REQUEST --region eu-central-1
# 4. Copy this file to backend.tf and update the bucket name
# 5. Run: terraform init -migrate-state

terraform {
  backend "s3" {
    bucket         = "your-terraform-state-bucket"
    key            = "thyme/terraform.tfstate"
    region         = "eu-central-1"
    encrypt        = true
    dynamodb_table = "terraform-state-locks"
  }
}
